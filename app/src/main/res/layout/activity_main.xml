<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.lab11_dialog.MainActivity">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hellow World!"
        android:textAppearance="@android:style/TextAppearance.Large"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAlertDialog"
        android:textAllCaps="false"
        android:text="AlertDialog OK"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAlertDialogYesNo"
        android:textAllCaps="false"
        android:text="AlertDialog YES-NO"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAlertDialogYesNoCancel"
        android:textAllCaps="false"
        android:text="AlertDialog YES-NO-CANCEL"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAlertDialogItems"
        android:textAllCaps="false"
        android:text="AlertDialog Items"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAlerDialogMultiChoice"
        android:textAllCaps="false"
        android:text="AlerDialog MultiChoice"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAlerDialogSingleChoice"
        android:textAllCaps="false"
        android:text="AlerDialog SingleChoice"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickMyDialogFragment"
        android:textAllCaps="false"
        android:text="MyDialogFragment"/>

</LinearLayout>
